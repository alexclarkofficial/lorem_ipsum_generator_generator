<% provide(:title, @generator.name) %>

<header class="header-row">
  
  <div class="row">
    <div class="large-12 columns text-center">
      <%= image_tag @generator.logo, class: "subipsum-logo" %>
      <h1><%= @generator.name %></h1>
    </div>
  </div>
</header>

<div class="fun-bg">
  <div class="fun-container">
    <div class="row">
      <div class="large-5 columns">
        <%= image_tag @generator.image %>
      </div>
      <div class="large-7 columns">
        <div class="value-prop">
          <h2><%= @generator.tagline %></h2>
          <h3><%= @generator.sub_tagline %></h3>
        </div>
      </div>
    </div>
  </div>

  <div class="action-container">
    <div class="row">
      <%= form_tag(generator_path, remote: true, method: :get) do %>
        <div class="large-6 action-col small-6 columns text-center">
          <span>paragraphs:</span>
          <%= text_field_tag(:num_paragraphs, 3, class: "input-field", maxlength: 2) %>
        </div>
        <div class="large-6 action-col small-6 columns">
          <%= submit_tag "generate kapow", class: "button"%>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="content-bg">
<div class="row">
  <div class="large-12 columns">
    <div class="content-container" id="output-container">
      <div class="filler text-center">
        <h2 id="filler">Click for laughs</h2><i class="fa fa-reply fa-6x"></i>
      </div> 
    </div>
  </div>
</div>

<div class="row">
  <div class="large-12 columns text-center">
    <h2 class="submit-title">Submit your client quotes</h2>
  </div>
</div>

<div class="row submit-form">
  <div class="large-6 large-centered columns text-center">
    <i class="fa fa-quote-left fa-2x"></i>
    <%= form_for @lorem_ipsum do |f| %> 
      <%= f.text_area :content, class: 'submit-quotes' %>
      <%= f.hidden_field :generator_id, value: @generator.id %>
      <%= f.submit "Submit", class: "button submit-btn", id: "submit-btn" %>
    <% end %>
    <i class="fa fa-quote-right fa-2x"></i>
  </div>
</div>
  
<footer>
  <div class="row">
    <div class="large-3 large-centered small-3 small-centered columns" style="text-align:center">
      <h4>Spread the love:</h4>
      <div class="share-container">
        <!-- AddThis Button BEGIN -->
        <div class="addthis_toolbox addthis_default_style">
          <a class="addthis_button_tweet at300b" addthis:url="http://crazyclientipsum.com" addthis:title="Make your designs really POP with Crazy Client Ipsum!"></a>
          <a class="addthis_button_facebook_like at300b" fb:like:layout="button_count"></a>
        </div>
        <script type="text/javascript" src="//s7.addthis.com/js/300/addthis_widget.js#pubid=xa-52af30d60148609c">
        </script>
        <!-- AddThis Button END -->
      </div>
    </div>
  </div>
</footer>